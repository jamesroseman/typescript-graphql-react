{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "sourceMap": true,

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es2019",
      "dom"
    ],

    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules/*",
  ]
}